---
interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

const { title, description, canonical, ogImage } = Astro.props;
const siteUrl = import.meta.env.SITE_URL || Astro.url.origin;
const posthogKey = import.meta.env.PUBLIC_POSTHOG_KEY ?? '';
const posthogHost = import.meta.env.PUBLIC_POSTHOG_HOST || 'https://us.i.posthog.com';
const fullTitle = `${title} | 숨이`;
const fullDescription = description ?? '잘 쉬는 몸을 만드는 시간. 숨이는 라이프 이완 케어입니다.';
const canonicalUrl = canonical ? new URL(canonical, siteUrl).href : new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = ogImage ? new URL(ogImage, siteUrl).href : new URL('/og-default.png', siteUrl).href;
---

